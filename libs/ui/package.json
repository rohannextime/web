{
  "name": "@rohan/ui",
  "version": "0.0.0-development",
  "description": "Rohan UI é uma biblioteca de componentes para React, fundamentada na nextime-ui. Ela é focada para os projetos de Rohan.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "vercel-build": "pnpm install && pnpm build",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "clean": "rm -rf .next .turbo node_modules tsconfig.tsbuildinfo pnpm-lock.yaml dist",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --external react --watch",
    "lint": "eslint src/**/*.ts* --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "React",
    "Componentes",
    "UI Library",
    "Next.js",
    "Biblioteca de componentes",
    "NeXTIME UI",
    "use client",
    "Front-end",
    "Desenvolvimento Web",
    "tsup",
    "TypeScript"
  ],
  "author": "Pedro Duarte - NeXTIME",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/rohannextime/web.git"
  }
}
